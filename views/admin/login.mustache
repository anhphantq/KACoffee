    <body>
            <div class="d-flex justify-content-center align-items-center h-100">
                <h1 class="mb-3">KACOFFE MANAGEMENT SYSTEM</h1>
            </div>
            <div class="row" id ="mid">
                <div class="col-xs-12 col-md-4 pull-right col3"></div>
                <div class="col-xs-12 col-md-4 pull-right col1">
                        <div class="card col-md-10 " style="background-color:#D3D3D3 ;">
                            <div class="card-body p-5">
                            <p >SIGN IN WITH YOUR KACOFFE ACCOUNT</p>
                            <hr  width="100%" size="5px"  />
                            <div class="p-3 d-none" id = "warning">&middot Invalid email or password</div>
                            <!-- Email input -->
                            <div class="input-box">
                                <i class = "fa fa-envelope-o"></i>
                                <input type="email" id="email_login" placeholder="Email"  name= "email" autofocus>
                            </div>
            
                            <!-- Password input -->
                            <div class="input-box" >
                                <i class = "fa fa-key"></i>
                                <input type="password" id="password_login" placeholder="Password" autofocus>
                                <span class ='eye' onclick="showpass()">
                                    <i id="hide1" class ="fa fa-eye"></i>
                                    <i id="hide2" class ="fa fa-eye-slash"></i>
                                </span>
                            
                            </div>
                             <a href="/forgotpassword">Forgot password?</a>
                            <!-- Submit button -->
                            <button type="button" id= "submit_login" class="login-btn">Sign in</button>
                                </div>
                            </div>
              
                </div>            
            </div>
            

