        <div
            class="d-flex py-0 justify-content-between"
            style="background-color: rgb(177, 171, 148)"
        >
            <div>
                <a class="navbar-brand p-0 m-0" href="/"
                    ><img src="/images/logo.jpg"
                /></a>
                <div
                    style="
                        align-content: center;
                        display: inline-block;
                        font-size: 25px;
                        font-weight: bold;
                    "
                >
                    KACOFFEE MANAGEMENT SYSTEM
                </div>
            </div>
            <div
                class="float-right my-auto"
                style="align-content: center; position: relative"
            >
                <div
                    class="my-auto login"
                    style="align-content: center; display: inline-block"
                >
                    <i
                        class="far fa-user-circle"
                        style="padding-right: 20px; font-size: 20px"
                    ></i>
                </div>
                <div
                    class="name my-auto py-auto"
                    style="
                        display: inline-block;
                        padding-right: 20px;
                        font-size: 20px;
                    "
                >
                    <div class="account-title272">ADMIN</div>
                </div>
            </div>
        </div>
        <script src="/js/admin/account.js"></script>
    
        <div class="row m-0 p-0">
            <div
                class="col-2"
                style="
                    background-color: beige;
                    min-height: 89.5vh;
                    position: relative;
                "
            >
                <div class="dashboard">DASHBOARD</div>
                <div class="sidebar">
                    <div class="sidebar-item btn-createstaff">Create staff account</div>
                    <div class="sidebar-item active btn-analysis">Analysis</div>
                    {{! <div class="sidebar-item btn-vieweacc">View employee account</div>
                    <div class="sidebar-item btn-viewuacc">View user account</div> }}
                    <div class="sidebar-item btn-voucher">Vouchers</div>
                    <div class="sidebar-item btn-addproduct">Add product</div>
                    <div class="sidebar-item btn-deleteproduct">Delete product</div>
                </div>
                <div
                    class="sidebar-footer"
                    style="
                        position: absolute;
                        bottom: 0;
                        font-size: 15px;
                        font-weight: bold;
                    "
                >
                    <i class="fas fa-map-marker-alt"></i> KACoffe, 123 ABC Hanoi
                </div>
            </div>

            <div class="col-10">
                <div class="content">
                    <div class="row">
                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <div class="card card-stats">
                        <div class="card-body ">
                            <div class="row">
                            <div class="col-5 col-md-4">
                                <div class="icon-big text-center icon-warning">
                                <i class="nc-icon nc-globe text-warning"></i>
                                </div>
                            </div>
                            <div class="col-7 col-md-8">
                                <div class="numbers" id = "revenues">
                                <p class="card-category">Today's Revenues</p>
                                
                                </div>
                            </div>
                            </div>
                        </div>
                        <div class="card-footer ">
                            <hr>
                            <div class="stats">
                            <i class="fa fa-refresh"></i>
                            Update Now
                            </div>
                        </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <div class="card card-stats">
                        <div class="card-body ">
                            <div class="row">
                            <div class="col-5 col-md-4">
                                <div class="icon-big text-center icon-warning">
                                <i class="nc-icon nc-money-coins text-success"></i>
                                </div>
                            </div>
                            <div class="col-7 col-md-8">
                                <div class="numbers" id=  "Budget">
                                <p class="card-category">Budget</p>
                               
                                </div>
                            </div>
                            </div>
                        </div>
                        <div class="card-footer ">
                            <hr>
                            <div class="stats">
                            <i class="fa fa-calendar-o"></i>
                            This month
                            </div>
                        </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <div class="card card-stats">
                        <div class="card-body ">
                            <div class="row">
                            <div class="col-5 col-md-4">
                                <div class="icon-big text-center icon-warning">
                                <i class="nc-icon nc-vector text-danger"></i>
                                </div>
                            </div>
                            <div class="col-7 col-md-8">
                                <div class="numbers" id ="order_nums">
                                <p class="card-category">Numbers of orders</p>
                       
                                </div>
                            </div>
                            </div>
                        </div>
                        <div class="card-footer ">
                            <hr>
                            <div class="stats">
                            <i class="fa fa-calendar-o"></i>
                            This month
                            </div>
                        </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <div class="card card-stats">
                        <div class="card-body ">
                            <div class="row">
                            <div class="col-5 col-md-4">
                                <div class="icon-big text-center icon-warning">
                                <i class="nc-icon nc-favourite-28 text-primary"></i>
                                </div>
                            </div>
                            <div class="col-7 col-md-8">
                                <div class="numbers">
                                <p class="card-category" id ="Members">Members</p>
                                <p class="card-title">+45K<p>
                                </div>
                            </div>
                            </div>
                        </div>
                        <div class="card-footer ">
                            <hr>
                            <div class="stats">
                            <i class="fa fa-refresh"></i>
                            Update now
                            </div>
                        </div>
                        </div>
                    </div>
                    </div>
                    <div class="row">
                    <div class="col-md-12">
                        <div class="card ">
                        <div class="card-header ">
                            <h5 class="card-title">Orders </h5>
                        </div>
                        <div class="card-body" id = "order_list">

                        </div>
                        <div class="card-footer ">
                            <hr>
                            <div class="stats">
                            <i class="fa fa-history"></i> Updated now
                            </div>
                        </div>
                        </div>
                    </div>
                    </div>
                </div>       
            </div>
