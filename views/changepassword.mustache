        <title>KACoffee | Reset Password</title>
    </head>
    <body>

            {{>navbar}}
            <script>fetchState()</script>
				 <div class="row pb-5">
					<div class="col-lg-12 text-center">
						<h1>RESET YOUR PASSWORD</h1>
						<p>If youâ€™ve forgotten your password, please enter a new one below. This information should be kept private to prevent unauthorized account access.</p>
					</div>
				</div>

            <div class="d-flex justify-content-center align-items-center h-100" id="main">
                <div class="col-md-6 col-12" id ="square">
                        <div class="card col-md-12 " >
                            <div class="card-body p-10" style="background-color:#D3D3D3 ;">
                                <p >New Password</p>
                                <hr  width="100%" size="5px"  />
                                <div class="p-3 mes-none" id = "mes-password1"> * Please enter your password</div>
                                <div class="p-3 mes-none" id = "mes-password2">* Please enter your confirm password</div>
                                <div class="p-3 mes-none" id = "mes-password">* Password and confirm password do not match</div>
                                    <!-- Email input -->
                                   	<div class="panel-body">
										<div class="row form-group">                  
											<div class="col-md-2">
												<label for="email">Password</label>
											</div>
										    <div class="col-md-10">
												<input type="text" class="form-control" id="password" name="email" placeholder="Password" maxlength="100" value="">
											</div>
										</div>
									</div>
                                    <div class="panel-body">
										<div class="row form-group">                  
											<div class="col-md-2">
												<label for="email">Confirm password</label>
											</div>
										    <div class="col-md-10">
												<input type="text" class="form-control" id="confirm_password" name="email" placeholder="Confirm password" maxlength="100" value="">
											</div>
										</div>
									</div>
                                </div>
                            </div>
                            <button type="button" id= "submit" class="login-btn">SUBMIT</button>
                         </div>           
                </div> 
               
            </div>
            {{>footer}}   


